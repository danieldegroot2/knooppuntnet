<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" monitorInterval="30">
    <Appenders>
        <RollingFile name="RollingFile" fileName="/kpn/logs/play.log"
            filePattern="/kpn/logs/play-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %20.20t %x %logger{1} - %msg%n"/>
                <Policies>
                    <SizeBasedTriggeringPolicy size="10 MB"/>
                </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="RollingFile"/>
        </Root>
        <Logger name="akka" level="info"/>
        <Logger name="kpn" level="info"/>
        <Logger name="kpn.core.repository.ChangeSetRepositoryImpl" level="info"/>
        <Logger name="kpn.core.db.couch.DatabaseImpl" level="info"/>
    </Loggers>
</Configuration>
