<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" monitorInterval="30">
    <Appenders>
        <RollingFile name="File" fileName="/kpn/logs/a.log"
            filePattern="/kpn/logs/a-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %20.20t %x %logger{1} - %msg%n"/>
                <Policies>
                    <SizeBasedTriggeringPolicy size="100 MB"/>
                </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
    <root level="info">
      <appender-ref ref="File" level="info"/>
    </root>    

        <Logger name="akka" level="info"/>
        <Logger name="kpn" level="info"/>
        <Logger name="org" level="info"/>

	<Logger name="kpn.core.mongo.DatabaseCollection" level="info"/>

    </Loggers>
</Configuration>
