<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" monitorInterval="30">
    <Appenders>
        <RollingFile name="RollingFile" fileName="/kpn/logs/migrate-changes-tool.log"
                     filePattern="/kpn/logs/migrate-changes-tool-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %20.20t %x %logger{1} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="RollingFile"/>
        </Root>
        <Logger name="kpn" level="info"/>
        <Logger name="org" level="info"/>
        <Logger name="kpn.core.mongo.migration" level="debug"/>
    </Loggers>
</Configuration>
