# status
echo disk-space-used=$(df --output=used /kpn | tail -1)
echo disk-space-available=$(df --output=avail /kpn | tail -1)
echo disk-space-overpass=$(du -s /kpn/database | cut -f1)
echo mem-total=$(egrep --color=none -e MemTotal /proc/meminfo |  awk '{print $2}')
echo mem-free=$(egrep --color=none -e MemFree /proc/meminfo |  awk '{print $2}')
echo mem-swap-total=$(egrep --color=none -e SwapTotal /proc/meminfo | awk '{print $2}')
echo mem-swap-free=$(egrep --color=none -e SwapFree /proc/meminfo | awk '{print $2}')
echo mem-available=$(egrep --color=none -e MemAvailable  /proc/meminfo |  awk '{print $2}')
echo mem-buffers=$(egrep --color=none -e Buffers /proc/meminfo | awk '{print $2}')
