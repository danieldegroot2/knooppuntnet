[
  {
    "$match": {
      "route.active": true,
      "route.orphan": true,
      "route.summary.country": {
        "$exists": true
      }
    }
  },
  {
    "$group": {
      "_id": {
        "country": "$route.summary.country",
        "networkType": "$route.summary.networkType"
      },
      "routeCount": {
        "$sum": 1
      }
    }
  },
  {
    "$project": {
      "_id": {"$concat": ["$_id.country", ":", "$_id.networkType", ":OrphanRouteCount"]},
      "country": "$_id.country",
      "networkType": "$_id.networkType",
      "name": "OrphanRouteCount",
      "value": "$routeCount"
    }
  },
  {
    "$merge": {
      "into": "statistics-route-orphan-count",
      "on": "_id"
    }
  }
]