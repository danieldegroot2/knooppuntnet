[
  {
    "$match": {
      "key.elementId": @routeId,
      "key.time.year": @year,
      "key.time.month": @month
    }
  },
  {
    "$group": {
      "_id": {
        "routeId": "$key.elementId",
        "year": "$key.time.year",
        "month": "$key.time.month",
        "day": "$key.time.day",
        "impact": "$impact"
      },
      "count": {
        "$sum": 1
      }
    }
  },
  {
    "$project": {
      "_id": 0,
      "year": "$_id.year",
      "month": "$_id.month",
      "day": "$_id.day",
      "impact": {
        "$cond": {
          "if": "$_id.impact",
          "then": "$count",
          "else": 0
        }
      },
      "total": "$count"
    }
  },
  {
    "$group": {
      "_id": {
        "year": "$year",
        "month": "$month",
        "day": "$day"
      },
      "impact": {
        "$sum": "$impact"
      },
      "total": {
        "$sum": "$total"
      }
    }
  },
  {
    "$sort": {
      "_id": -1
    }
  },
  {
    "$project": {
      "_id": 0,
      "year": "$_id.year",
      "month": "$_id.month",
      "day": "$_id.day",
      "impact": "$impact",
      "total": "$total"
    }
  }
]
