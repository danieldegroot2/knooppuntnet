[
  {
    "$match": {
      "networkChange.networkId": @networkId,
      "networkChange.key.time.year": @year,
      "networkChange.key.time.month": @month
    }
  },
  {
    "$group": {
      "_id": {
        "networkId": "$networkChange.networkId",
        "year": "$networkChange.key.time.year",
        "month": "$networkChange.key.time.month",
        "day": "$networkChange.key.time.day",
        "impact": "$networkChange.impact"
      },
      "count": {
        "$sum": 1
      }
    }
  },
  {
    "$project": {
      "_id": 0,
      "year": "$_id.year",
      "month": "$_id.month",
      "day": "$_id.day",
      "impact": {
        "$cond": {
          "if": "$_id.impact",
          "then": "$count",
          "else": 0
        }
      },
      "total": "$count"
    }
  },
  {
    "$group": {
      "_id": {
        "year": "$year",
        "month": "$month",
        "day": "$day"
      },
      "impact": {
        "$sum": "$impact"
      },
      "total": {
        "$sum": "$total"
      }
    }
  },
  {
    "$sort": {
      "_id": -1
    }
  },
  {
    "$project": {
      "_id": 0,
      "year": "$_id.year",
      "month": "$_id.month",
      "day": "$_id.day",
      "impact": "$impact",
      "total": "$total"
    }
  }
]
