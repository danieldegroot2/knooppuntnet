[
  {
    "$match": {
      "year": @year,
      "month": @month
    }
  },
  {
    "$group": {
      "_id": {
        "year": "$year",
        "month": "$month",
        "day": "$day",
        "impact": "$impact"
      },
      "count": {
        "$sum": "$count"
      }
    }
  },
  {
    "$project": {
      "_id": 0,
      "year": "$_id.year",
      "month": "$_id.month",
      "day": "$_id.day",
      "impact": {
        "$cond": {
          "if": "$_id.impact",
          "then": "$count",
          "else": 0
        }
      },
      "total": "$count"
    }
  },
  {
    "$group": {
      "_id": {
        "year": "$year",
        "month": "$month",
        "day": "$day"
      },
      "impact": {
        "$sum": "$impact"
      },
      "total": {
        "$sum": "$total"
      }
    }
  },
  {
    "$sort": {
      "_id": -1
    }
  },
  {
    "$project": {
      "_id": 0,
      "year": "$_id.year",
      "month": "$_id.month",
      "day": "$_id.day",
      "impact": "$impact",
      "total": "$total"
    }
  }
]
