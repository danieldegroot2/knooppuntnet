[
  {
    "$match": {
      "route.active": true,
      "route.summary.country": {
        "$exists": true
      }
    }
  },
  {
    "$group": {
      "_id": {
        "country": "$route.summary.country",
        "networkType": "$route.summary.networkType"
      },
      "distance": {
        "$sum": "$route.summary.meters"
      }
    }
  },
  {
    "$project": {
      "_id": {
        "$concat": [
          "$_id.country",
          ":",
          "$_id.networkType",
          ":Distance"
        ]
      },
      "country": "$_id.country",
      "networkType": "$_id.networkType",
      "name": "Distance",
      "value": "$distance"
    }
  },
  {
    "$merge": {
      "into": "statistics-route-distance",
      "on": "_id"
    }
  }
]