[
  {
    "$match": {
      "active": true,
      "country": {
        "$exists": true
      },
      "facts": {
        "$exists": true,
        "$ne": []
      }
    }
  },
  {
    "$unwind": {
      "path": "$facts"
    }
  },
  {
    "$group": {
      "_id": {
        "country": "$country",
        "networkType": "$summary.networkType",
        "name": "$facts.name"
      },
      "factCount": {
        "$sum": 1
      }
    }
  },
  {
    "$project": {
      "_id": {
        "$concat": [
          "$_id.country",
          ":",
          "$_id.networkType",
          ":",
          "$_id.name"
        ]
      },
      "country": "$_id.country",
      "networkType": "$_id.networkType",
      "name": "$_id.name",
      "value": "$factCount"
    }
  },
  {
    "$merge": {
      "into": "statistics-network-facts",
      "on": "_id"
    }
  }
]