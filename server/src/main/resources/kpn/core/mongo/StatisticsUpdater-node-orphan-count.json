[
  {
    "$match": {
      "node.active": true,
      "node.orphan": true,
      "node.country": {
        "$exists": true
      },
      "node.names": {
        "$exists": true
      }
    }
  },
  {
    "$unwind": {
      "path": "$node.names"
    }
  },
  {
    "$group": {
      "_id": {
        "country": "$node.country",
        "networkType": "$node.names.networkType"
      },
      "nodeCount": {
        "$sum": 1
      }
    }
  },
  {
    "$project": {
      "_id": {"$concat": ["$_id.country", ":", "$_id.networkType", ":OrphanNodeCount"]},
      "country": "$_id.country",
      "networkType": "$_id.networkType",
      "name": "OrphanNodeCount",
      "value": "$nodeCount"
    }
  },
  {
    "$merge": {
      "into": "statistics-node-orphan-count",
      "on": "_id"
    }
  }
]