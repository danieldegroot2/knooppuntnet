{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true, // added for OpenLayers; see https://github.com/openlayers/openlayers
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"],
      "@api/*": ["src/app/kpn/api/*"],
      "ol": ["node_modules/ol/src"], // added for OpenLayers; see https://github.com/openlayers/openlayers
      "ol/*": ["node_modules/ol/src/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2019",
      "dom"
    ]
  },
//  "include": [ // added for OpenLayers; see https://github.com/openlayers/openlayers
//    "**/*.ts",
//    "node_modules/ol/**/*"
//  ],
//  "typeAcquisition": { // added for OpenLayers; see https://github.com/openlayers/openlayers
//    "exclude": ["ol"]
//  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true
  }
}
