{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "knooppuntnet": {
      "i18n": {
        "sourceLocale": {
          "code": "en",
          "baseHref": "/en/"
        },
        "locales": {
          "nl": {
            "translation": "src/locale/translations.nl.xlf",
            "baseHref": "/nl/"
          },
          "fr": {
            "translation": "src/locale/translations.fr.xlf",
            "baseHref": "/fr/"
          },
          "de": {
            "translation": "src/locale/translations.de.xlf",
            "baseHref": "/de/"
          }
        }
      },
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "kpn",
      "schematics": {
        "@schematics/angular:component": {
          "changeDetection": "OnPush",
          "style": "scss",
          "inlineStyle": true,
          "inlineTemplate": true,
          "skipTests": true,
          "flat": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/knooppuntnet",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.app.json",
            "allowedCommonJsDependencies": [
              "ol-geocoder",
              "pbf",
              "@babel/runtime-corejs3",
              "canvg",
              "raf"
            ],
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/manifest.json"
            ],
            "styles": [
              "src/theme.scss",
              "src/styles.scss",
              "node_modules/ol/ol.css",
              "node_modules/ol-geocoder/dist/ol-geocoder.css"
            ],
            "scripts": [
              "node_modules/marked/lib/marked.js"
            ],
            "vendorChunk": true,
            "extractLicenses": false,
            "buildOptimizer": false,
            "sourceMap": true,
            "optimization": false,
            "namedChunks": true,
            "i18nMissingTranslation": "error"
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "localize": true,
              "optimization": true,
              "outputHashing": "all",
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "serviceWorker": true
            },
            "nl": {
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "localize": ["nl"],
              "outputPath": "dist/kpn-nl/"
            },
            "fr": {
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "localize": ["fr"],
              "outputPath": "dist/kpn-fr/"
            },
            "de": {
              "budgets": [
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ],
              "localize": ["de"],
              "outputPath": "dist/kpn-de/"
            }
          },
          "defaultConfiguration": ""
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "port": 4000,
            "browserTarget": "knooppuntnet:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "knooppuntnet:build:production"
            },
            "nl": {
              "browserTarget": "knooppuntnet:build:nl"
            },
            "fr": {
              "browserTarget": "knooppuntnet:build:fr"
            },
            "de": {
              "browserTarget": "knooppuntnet:build:de"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "knooppuntnet:build",
            "outFile": "translations.xlf"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "karmaConfig": "src/karma.conf.js",
            "styles": [
              "src/styles.scss"
            ],
            "scripts": [],
            "assets": [
              "src/assets",
              "src/manifest.json"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        }
      }
    }
  }
}
